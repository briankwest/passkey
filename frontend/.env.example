# Frontend Environment Variables

# API Configuration
# The backend API URL (should match backend PORT setting)
VITE_API_URL=http://localhost:5001

# Application Origin
# This should match the ORIGIN setting in backend .env
VITE_ORIGIN=http://localhost:3000

# Optional: Google Analytics (leave empty to disable)
VITE_GA_TRACKING_ID=

# Optional: Sentry Error Tracking (leave empty to disable)
VITE_SENTRY_DSN=

# Feature Flags (all default to true)
VITE_ENABLE_PASSKEYS=true
VITE_ENABLE_PASSWORD_AUTH=true
VITE_ENABLE_TOTP=true
VITE_ENABLE_CROSS_DEVICE=true

# Development Settings
VITE_ENABLE_DEBUG=false